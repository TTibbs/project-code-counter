{
  "name": "project-line-counter",
  "version": "1.0.1",
  "description": "A simple CLI tool to count lines of code by language.",
  "main": "dist/index.js",
  "bin": {
    "count-lines": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run build",
    "start": "node dist/index.js",
    "test": "jest",
    "test:verbose": "jest --verbose",
    "lint": "eslint . --ext .ts"
  },
  "keywords": [
    "cli",
    "code-counter",
    "lines-of-code",
    "typescript"
  ],
  "author": "TTibbs <wtibbs@proton.me>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TTibbs/project-line-counter.git"
  },
  "engines": {
    "node": ">=14"
  },
  "type": "module",
  "dependencies": {
    "@inquirer/prompts": "^7.4.1",
    "chalk": "^5.4.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@types/inquirer": "^8.2.0",
    "eslint": "^8.44.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ]
  }
}
